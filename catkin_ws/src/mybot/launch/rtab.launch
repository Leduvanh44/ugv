<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Arguments for launch file with defaults provided -->
    <arg name="rgb_topic" default="/camera/rgb/image_raw"/>
    <arg name="depth_topic" default="/camera/depth/image_raw"/>
    <arg name="camera_info_topic" default="/camera/rgb/camera_info"/>
    <!-- <arg name="odometry_topic" default="/odom"/> Thêm odometry topic nếu có -->

    <!-- Mapping Node -->
    <group ns="rtabmap">
        <node name="rtabmap" pkg="rtabmap_ros" type="rtabmap" output="screen" args="--delete_db_on_start">

            <!-- Basic RTAB-Map Parameters -->
            <param name="frame_id" type="string" value="base_link"/>
            <param name="odom_frame_id" type="string" value="odom"/>
            <param name="subscribe_depth" type="bool" value="true"/>
            <param name="subscribe_scan" type="bool" value="false"/> <!-- Tắt scan nếu không sử dụng -->
            <param name="subscribe_imu" type="bool" value="false"/> <!-- Tắt IMU vì không sử dụng -->
            <param name="subscribe_odom" type="bool" value="false"/> <!-- Bật odometry nếu có -->

            <!-- RTAB-Map Inputs -->
            <remap from="rgb/image" to="$(arg rgb_topic)"/>
            <remap from="depth/image" to="$(arg depth_topic)"/>
            <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>
            <remap from="odom" to="$(arg odometry_topic)"/>

            <!-- RTAB-Map Output -->
            <remap from="cloud_map" to="/cloud_map"/> <!-- Đầu ra bản đồ 3D -->
            <remap from="grid_map" to="/map"/>

            <!-- Rate (Hz) at which new nodes are added to map -->
            <param name="Rtabmap/DetectionRate" type="string" value="1"/>

            <!-- 3D SLAM -->
            <param name="Reg/Force3DoF" type="string" value="false"/> <!-- Cho phép 6 DoF cho bản đồ 3D -->

            <!-- Loop Closure Detection -->
            <param name="Kp/DetectorStrategy" type="string" value="0"/>
            <param name="Kp/MaxFeatures" type="string" value="200"/>
            <param name="SURF/HessianThreshold" type="string" value="100"/>
            <param name="Reg/Strategy" type="string" value="0"/>
            <param name="Vis/MinInliers" type="string" value="10"/>

            <!-- Memory Management -->
            <param name="Mem/NotLinkedNodesKept" type="string" value="false"/>
            <param name="Mem/IncrementalMemory" type="string" value="true"/> <!-- Bật bộ nhớ tăng dần -->

        </node>

        <!-- Optional visualization with rtabmapviz -->
        <!-- <node pkg="rtabmap_ros" type="rtabmapviz" name="rtabmapviz" args="-d $(find rtabmap_ros)/launch/config/rgbd_gui.ini" output="screen">
            <param name="subscribe_depth" type="bool" value="true"/>
            <param name="subscribe_scan" type="bool" value="true"/>
            <param name="frame_id" type="string" value="base_footprint"/>

            <remap from="rgb/image" to="$(arg rgb_topic)"/>
            <remap from="depth/image" to="$(arg depth_topic)"/>
            <remap from="rgb/camera_info" to="$(arg camera_info_topic)"/>
            <remap from="scan" to="/scan"/>
            <remap from="odom" to="/odom"/>
        </node> -->
    </group>

    <!-- Optional visualization with RViz -->

</launch>
